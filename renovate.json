{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		":rebaseStalePrs",
		":renovatePrefix",
		":semanticCommits",
		":timezone(Australia/Melbourne)",
		":dependencyDashboard",
		":pinDependencies",
		":pinDevDependencies",
		"group:allNonMajor"
	],
	"automerge": true,
	"commitMessageAction": "",
	"labels": ["dependencies"],
	"prConcurrentLimit": 5,
	"prNotPendingHours": 1,
	"semanticCommitScope": "",
	"semanticCommitType": "deps",
	"packageRules": [
		{
			"extends": ["monorepo:nextjs"],
			"groupName": "nextjs monorepo",
			"matchUpdateTypes": ["digest", "patch", "minor", "major"]
		},
		{
			"description": "Update Volta Node only to LTS releases",
			"matchManagers": ["volta"],
			"allowedVersions": "/^(24|26)\\.\\d+\\.\\d+$/"
		},
		{
			"description": "Node",
			"matchPackageNames": ["node", "@types/node"],
			"groupName": "node and types",
			"matchManagers": ["volta", "npm"]
		}
	]
}
