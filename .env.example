# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity Write Token (Server-only)
# Required for form submission storage
# Generate a project-specific token at: https://sanity.io/manage -> Project -> API -> Tokens
SANITY_WRITE_TOKEN=your-write-token

# AWS SES Configuration (Server-only)
# Required for email sending
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Google reCAPTCHA Enterprise (Optional)
# Required for bot protection on contact forms
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
RECAPTCHA_RISK_SCORE_THRESHOLD=0.5

# Cache Revalidation (Server-only)
# Secret for triggering on-demand cache revalidation
REVALIDATE_SECRET=your-revalidation-secret

# Meta/Facebook API (Server-only)
# Required for publishing to Facebook Page and Instagram Business
# Get these from https://developers.facebook.com/
META_PAGE_ACCESS_TOKEN=your-page-access-token
META_FACEBOOK_PAGE_ID=your-facebook-page-id
META_INSTAGRAM_ACCOUNT_ID=your-instagram-account-id
# Set to 'false' to disable a platform (defaults to enabled)
META_FACEBOOK_ENABLED=true
META_INSTAGRAM_ENABLED=true

# Social Publishing Webhook (Server-only)
# Secret for social media publishing webhook endpoint
SOCIAL_PUBLISH_SECRET=your-webhook-secret

# Environment
ENV=local

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-dsn
SENTRY_AUTH_TOKEN=your-auth-token
SENTRY_ORG=vasic-org
SENTRY_PROJECT=javascript-nextjs
SENTRY_URL=https://sentry.io
