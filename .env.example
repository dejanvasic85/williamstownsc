# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity Write Token (Server-only)
# Required for form submission storage
# Generate at: https://sanity.io/manage/personal/tokens
SANITY_WRITE_TOKEN=your-write-token

# AWS SES Configuration (Server-only)
# Required for email sending
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Google reCAPTCHA Enterprise (Optional)
# Required for bot protection on contact forms
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
RECAPTCHA_RISK_SCORE_THRESHOLD=0.5

# Cache Revalidation (Server-only)
# Secret for triggering on-demand cache revalidation
REVALIDATE_SECRET=your-revalidation-secret

# Environment
ENV=local
