{
	"name": "williamstownsc",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev --port 3003",
		"build": "npm run typegen && next build",
		"build:sanity": "sanity build",
		"deploy:sanity": "sanity deploy",
		"start": "next start",
		"lint": "eslint",
		"lint-staged": "lint-staged",
		"format": "prettier . --write .",
		"format:check": "prettier . --check",
		"prepare": "husky",
		"typegen": "sanity schema extract --path src/sanity/schema.json && sanity typegen generate",
		"type:check": "tsc --noEmit",
		"generate": "tsx bin/generateMockData.ts"
	},
	"dependencies": {
		"@aws-sdk/client-ses": "3.953.0",
		"@portabletext/toolkit": "5.0.0",
		"@sanity/client": "7.13.2",
		"@sanity/image-url": "2.0.2",
		"@sanity/vision": "5.0.0",
		"clsx": "2.1.1",
		"daisyui": "5.5.14",
		"date-fns": "4.1.0",
		"lucide-react": "0.561.0",
		"next": "16.0.10",
		"next-sanity": "11.6.12",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-hook-form": "7.68.0",
		"sanity": "4.22.0",
		"styled-components": "6.1.19",
		"zod": "4.2.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.1.0",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^25.0.0",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"commander": "^14.0.2",
		"dotenv": "^17.2.3",
		"eslint": "^9",
		"eslint-config-next": "16.0.10",
		"eslint-config-prettier": "^10.0.0",
		"husky": "^9.0.7",
		"lint-staged": "^16.2.6",
		"prettier": "^3",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"tailwindcss": "^4",
		"tsx": "^4.20.6",
		"typescript": "^5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"prettier . --write",
			"eslint ."
		]
	},
	"volta": {
		"node": "24.12.0"
	},
	"browserslist": "> 1%"
}
